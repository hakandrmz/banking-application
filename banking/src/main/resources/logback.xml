<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <property name="LOGS" value="./logs"/>
  <property name="APPLICATION_NAME" value="BANKING_SERVICE"/>

  <appender class="ch.qos.logback.core.ConsoleAppender"
    name="Console">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
      </Pattern>
    </layout>
  </appender>
  <appender class="ch.qos.logback.core.rolling.RollingFileAppender"
    name="RollingFile">
    <encoder
      class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
    </encoder>
    <file>${LOGS}/${APPLICATION_NAME}.log</file>

    <rollingPolicy
      class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOGS}/archived/${APPLICATION_NAME}-%d{yyyy-MM-dd}.%i.log
      </fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <maxFileSize>5MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
    </rollingPolicy>
  </appender>

  <appender class="ch.qos.logback.classic.net.SMTPAppender" name="EMAIL">
    <SSL>true</SSL>
    <from>hakandrmz18@gmail.com</from>
    <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
    <password>sdibncfknejupmoo</password>
    <smtpHost>smtp.gmail.com</smtpHost>
    <smtpPort>465</smtpPort>
    <subject>${APPLICATION_NAME}: %logger{20} - %m</subject>
    <to>durmazhakan@yahoo.com</to>
    <username>hakandrmz18@gmail.com</username>
  </appender>
  <appender class="de.siegmar.logbackgelf.GelfUdpAppender" name="GELF">
    <encoder class="de.siegmar.logbackgelf.GelfEncoder">
      <fullPatternLayout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
        </Pattern>
      </fullPatternLayout>
      <includeCallerData>false</includeCallerData>
      <includeLevelName>false</includeLevelName>
      <includeMarker>true</includeMarker>
      <includeMdcData>true</includeMdcData>
      <includeRawMessage>false</includeRawMessage>
      <includeRootCauseData>false</includeRootCauseData>
      <originHost>127.0.0.1</originHost>
      <shortPatternLayout class="ch.qos.logback.classic.PatternLayout">
        <Pattern>
          %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
        </Pattern>
      </shortPatternLayout>
      <staticField>app_name:${APPLICATION_NAME}</staticField>
      <staticField>os_arch:${os.arch}</staticField>
      <staticField>os_name:${os.name}</staticField>
      <staticField>os_version:${os.version}</staticField>
    </encoder>
    <graylogHost>127.0.0.1</graylogHost>
    <graylogPort>12201</graylogPort>
    <maxChunkSize>508</maxChunkSize>
    <useCompression>true</useCompression>
  </appender>

  <root level="info">
    <!--    <appender-ref ref="EMAIL"/>-->
    <appender-ref ref="RollingFile"/>
    <appender-ref ref="Console"/>
    <appender-ref ref="GELF"/>
  </root>

</configuration>